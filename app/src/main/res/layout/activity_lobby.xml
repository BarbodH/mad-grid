<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    tools:context=".activities.LobbyActivity">

    <RelativeLayout
        android:id="@+id/lobby_relative_layout_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/menu_primarily"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lobby_image_return_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/menu_back_button"
            android:onClick="returnHome"
            android:padding="14dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/lobby_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ibm_plex_sans_bold"
            android:text="@string/menu_lobby"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lobby_text_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lobby_background_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lobby_button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/game_control_button_active"
        android:fontFamily="@font/ibm_plex_sans_semibold"
        android:onClick="joinLobby"
        android:text="@string/lobby_button_retry"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lobby_text_message" />

</androidx.constraintlayout.widget.ConstraintLayout>