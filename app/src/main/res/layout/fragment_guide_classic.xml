<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_image"
    tools:context=".activities.fragments.GuideClassic">

    <GridLayout
        android:id="@+id/guide_grid_layout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_margin="10sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/grid_background"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/guide_button_box_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="8sp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="4sp"
            android:layout_marginBottom="4sp"
            android:background="@drawable/grid_button_background_inactive"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/guide_button_box_2"
            android:background="@drawable/grid_button_background_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="4sp"
            android:layout_marginStart="4sp"
            android:layout_marginEnd="8sp"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/guide_button_box_3"
            android:background="@drawable/grid_button_background_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="4sp"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/guide_button_box_4"
            android:background="@drawable/grid_button_background_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="8sp"
            android:layout_marginStart="4sp"
            android:layout_marginEnd="8sp"
            android:fontFamily="@font/ibm_plex_sans_medium"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/guide_fragment_classic_linear_layout_description_container"
        android:background="@drawable/settings_background_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/guide_grid_layout"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/guide_fragment_classic_relative_layout_button_inactive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/guide_fragment_classic_image_button_inactive"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/guide_grid_background_inactive"
                android:contentDescription="@string/guide_inactive_icon" />

            <TextView
                android:id="@+id/guide_fragment_classic_text_button_inactive_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/guide_fragment_classic_image_button_inactive"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:text="@string/guide_inactive_button"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guide_fragment_classic_relative_layout_button_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/guide_fragment_classic_image_button_active"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/guide_grid_background_active"
                android:contentDescription="@string/guide_active_icon" />

            <TextView
                android:id="@+id/guide_fragment_classic_text_button_active_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/guide_fragment_classic_image_button_active"
                android:fontFamily="@font/ibm_plex_sans_medium"
                android:text="@string/guide_active_button"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/guide_button_tutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/guide_button_tutorial_background"
        android:fontFamily="@font/ibm_plex_sans_medium"
        android:padding="10dp"
        android:text="@string/guide_button_tutorial"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guide_fragment_classic_linear_layout_description_container" />

</androidx.constraintlayout.widget.ConstraintLayout>